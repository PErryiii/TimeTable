<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context="tableEdit.EditTableActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_editTable_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorYellow300">
        <TextView
            android:id="@+id/text_editTable_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑课程"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/btn_editTable_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:textSize="15dp"
            android:src="@mipmap/done_36x36"
            android:background="@color/colorYellow300"/>
    </android.support.v7.widget.Toolbar>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_course_name"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="15dp"
        android:hint="课程名"
        style="@style/EditTableEditText"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_editTable_title"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_course_room"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="15dp"
        android:hint="教室"
        style="@style/EditTableEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_course_name"/>
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_course_teacher"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextSize="15dp"
        android:hint="老师"
        style="@style/EditTableEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_course_room"/>

    <TextView
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星期几"
        android:textSize="18dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/editText_course_teacher"
        app:layout_constraintLeft_toLeftOf="@id/editText_course_teacher" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_course_day"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/editText_course_teacher"
        app:layout_constraintLeft_toRightOf="@id/one"
        app:layout_constraintTop_toTopOf="@id/one"
        app:layout_constraintBottom_toBottomOf="@id/one"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1sp"
        android:background="#DDD"
        app:layout_constraintLeft_toLeftOf="@id/editText_course_teacher"
        app:layout_constraintRight_toRightOf="@id/editText_course_teacher"
        app:layout_constraintTop_toBottomOf="@+id/spinner_course_day"/>

    <TextView
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第几节"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toLeftOf="@id/one" />
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_course_start"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/spinner_course_day"
        app:layout_constraintTop_toTopOf="@id/two"
        app:layout_constraintBottom_toBottomOf="@id/two"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1sp"
        android:background="#DDD"
        app:layout_constraintLeft_toLeftOf="@id/editText_course_teacher"
        app:layout_constraintRight_toRightOf="@id/editText_course_teacher"
        app:layout_constraintTop_toBottomOf="@+id/spinner_course_start"/>

    <TextView
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="几节课"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintLeft_toLeftOf="@id/two"/>
    <org.angmarch.views.NiceSpinner
        android:id="@+id/spinner_course_classNum"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/spinner_course_start"
        app:layout_constraintTop_toTopOf="@id/three"
        app:layout_constraintBottom_toBottomOf="@id/three"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="1sp"
        android:background="#DDD"
        app:layout_constraintLeft_toLeftOf="@id/editText_course_teacher"
        app:layout_constraintRight_toRightOf="@id/editText_course_teacher"
        app:layout_constraintTop_toBottomOf="@+id/spinner_course_classNum"/>

</android.support.constraint.ConstraintLayout>
